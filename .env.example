# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=content_ops
MYSQL_USER=content_user
MYSQL_PASSWORD=your_secure_password

# WordPress Configuration
WORDPRESS_DB_HOST=mysql:3306
WORDPRESS_DB_NAME=content_ops
WORDPRESS_DB_USER=content_user
WORDPRESS_DB_PASSWORD=your_secure_password

# WordPress Sites Configuration
SITE1_DOMAIN=site1.localhost
SITE1_TITLE=My First Site
SITE1_ADMIN_USER=admin
SITE1_ADMIN_PASSWORD=admin_password
SITE1_ADMIN_EMAIL=admin@example.com

SITE2_DOMAIN=site2.localhost
SITE2_TITLE=My Second Site
SITE2_ADMIN_USER=admin
SITE2_ADMIN_PASSWORD=admin_password
SITE2_ADMIN_EMAIL=admin@example.com

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=content-ops-backups
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Redis Configuration
REDIS_PASSWORD=your_redis_password

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Content Sync Configuration
CONTENT_SYNC_SCHEDULE="0 */6 * * *"  # Every 6 hours

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# Timezone
TZ=UTC